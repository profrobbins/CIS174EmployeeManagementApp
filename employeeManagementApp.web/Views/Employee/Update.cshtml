@model employeeManagementApp.web.Models.UpdateEmployeeModel

<script src="~/Scripts/DMACC/employee.js" type="text/javascript"></script>

<h2>Update Employee</h2>

<div class="row">
    <div class="col-md-3">
        <label>Search Name</label>
    </div>

    <div class="col-md-7">
        <input id="searchString" type="text" class="form-control" />
    </div>

    <div class="col-md-2">
        <button class="btn btn-primary" onclick="searchEmployee()">Search</button>
    </div>
</div>

<hr />

<div id="successMessage" class="hidden alert alert-success">
    Successfully updated!
</div>

<div id="errorMessage" class="hidden alert alert-danger">
    Error occurred!
</div>

    <div>
        <form>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-3">
                            <label>First Name</label>
                        </div>
                        <div>
                            <input id="FirstName" type="text" class="form-control" />
                        </div>
                    </div>
                    <span>&nbsp</span>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Middle Name</label>
                        </div>
                        <div>
                            <input id="MiddleName" type="text" class="form-control" />
                        </div>
                    </div>
                    <span>&nbsp</span>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Last Name</label>
                        </div>
                        <div>
                            <input id="LastName" type="text" class="form-control" />
                        </div>
                    </div>
                    <span>&nbsp</span>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Birth Date</label>
                        </div>
                        <div>
                            <input id="BirthDate" type="date" class="form-control" />
                        </div>
                    </div>
                    <span>&nbsp</span>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Hire Date</label>
                        </div>
                        <div>
                            <input id="HireDate" type="date" class="form-control" />
                        </div>
                    </div>
                    <span>&nbsp</span>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Department</label>
                        </div>
                        <div>
                            <input id="Department" type="text" class="form-control" />
                        </div>
                    </div>
                    <span>&nbsp</span>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Job Title</label>
                        </div>
                        <div>
                            <input id="JobTitle" type="text" class="form-control" />
                        </div>
                    </div>
                    <span>&nbsp</span>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Salary</label>
                        </div>
                        <div>
                            <input id="Salary" input type="number" class="form-control" />
                        </div>
                        <div>
                            <select>salary type
                                <option value="hourly">hourly</option>
                                <option value="salary"> salary</option>
                            </select>
                        </div>
                    </div>
                    <span>&nbsp</span>
                    <div class="row">
                        <div class="col-md-3">
                            <label>EmployeeId</label>
                        </div>
                        <div>
                            <input id="EmployeeId" type="text" class="form-control" />
                        </div>
                    </div>
                    <span>&nbsp</span>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Available Hours</label>
                        </div>
                        <div>
                            <input id="AvailableHrs" type="text" class="form-control" />
                        </div>
                    </div>
                    <span>&nbsp</span>
                </div>
            </div>

            <div class="col-md-10">
                <button class="btn btn-primary margin-top-md margin-left-md" type="button" onclick="updateEmployee()">Save</button>
            </div>
        </form>
    </div>